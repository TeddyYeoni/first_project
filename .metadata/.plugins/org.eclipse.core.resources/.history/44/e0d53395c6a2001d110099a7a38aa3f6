<script>
	$(function() {

		// Weahter checkbox 1ê°œë§Œ ì²´í¬ ê°€ëŠ¥
		$('input[type="checkbox"][name="todayWeather"]').click(
				function() {
					if ($(this).prop('checked')) {
						$('input[type="checkbox"][name="todayWeather"]').prop(
								'checked', false);
						$(this).prop('checked', true);
						let weatherValue = $(this).val();
						console.log(weatherValue)
					}
				});

		// Emtoion checkbox 1ê°œë§Œ ì²´í¬ ê°€ëŠ¥
		$('input[type="checkbox"][name="todayEmotion"]').click(
				function() {
					if ($(this).prop('checked')) {
						$('input[type="checkbox"][name="todayEmotion"]').prop(
								'checked', false);
						$(this).prop('checked', true);
					}
				});

		$('input:checkbox[name=todayWeather]').each(function(index) {
			if ($(this).is(":checked") == true) {
				console.log($(this).val());
			}
		});

	});
</script>