<script>
	$(function() {

		// Weahter checkbox 1개만 체크 가능
		$('input[type="checkbox"][name="todayWeather"]').click(
				function() {
					if ($(this).prop('checked')) {
						$('input[type="checkbox"][name="todayWeather"]').prop(
								'checked', false);
						$(this).prop('checked', true);
					}
				});

		// Emtoion checkbox 1개만 체크 가능
		$('input[type="checkbox"][name="todayEmotion"]').click(
				function() {
					if ($(this).prop('checked')) {
						$('input[type="checkbox"][name="todayEmotion"]').prop(
								'checked', false);
						$(this).prop('checked', true);
					}
				});

	});
</script>